<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.soladuor.mapper.WhitelistMapper">

    <select id="getAllWhitelist" resultType="com.soladuor.pojo.Whitelist">
        SELECT
            `id`,
            `ip_address`,
            `description`,
            `city`,
            `created_at`
        FROM
            whitelist
    </select>
    <insert id="addWhitelist">
        INSERT INTO
            whitelist(`ip_address`, `description`, `city`)
        VALUES
            (#{ipAddress}, #{description}, #{city})
    </insert>
    <delete id="deleteWhitelistById">
        DELETE
        FROM
            whitelist
        WHERE
            `id` = #{id}
    </delete>
</mapper>
